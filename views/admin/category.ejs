<div class="container">
    <a href="/addcategory" class="btn btn-dark mb-4">Add Category</a>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="userTableBody">
            <% if(categories.length > 0) { %>
                <% categories.forEach(categorie => { %>
                    <tr>
                        <td>
                            <%= categorie.category %>
                        </td>
                        <td>
                            <a href="/editcategory/<%= categorie._id %>" class="btn btn-success">Edit</a>
                            <a href="/deletecategory/<%= categorie._id %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            <% } %>
        </tbody>
    </table>
