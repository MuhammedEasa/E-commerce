<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.querySelector(".login_form");
    
    form.addEventListener("submit", function (event) {
      const emailInput = document.getElementById("email");
      const passwordInput = document.getElementById("password");

      // Remove existing error messages
      removeErrorMessage(emailInput);
      removeErrorMessage(passwordInput);

      // Validate email
      if (!emailInput.value.trim()) {
        event.preventDefault(); // Prevent form submission
        displayErrorMessage(emailInput, "Please enter a valid email.");
      }

      // Validate password
      if (!passwordInput.value.trim()) {
        event.preventDefault(); // Prevent form submission
        displayErrorMessage(passwordInput, "Please enter a valid password.");
      }
    });

    function displayErrorMessage(inputElement, message) {
      const errorMessage = document.createElement("p");
      errorMessage.textContent = message;
      errorMessage.style.color = "red";
      errorMessage.classList.add("error-message");

      const parentDiv = inputElement.parentElement;
      parentDiv.appendChild(errorMessage);
    }

    function removeErrorMessage(inputElement) {
      const parentDiv = inputElement.parentElement;
      const existingErrorMessage = parentDiv.querySelector(".error-message");
      if (existingErrorMessage) {
        parentDiv.removeChild(existingErrorMessage);
      }
    }
  });
</script>
