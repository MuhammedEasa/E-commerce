<%- include('header') %>
<header>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: black;
        }

        .h-100 {
            height: 100vh;
        }

        .center-content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            color: white;
        }

        .icon {
            font-size: 5rem;
        }

        h1 {
            margin-top: 20px;
        }
        #countdown {
            font-size: 1.5rem;
            margin-top: 20px;
            color: #f9b43a; 
        }
        #countdown button {
            margin-top: 10px;
            padding: 8px 16px;
            font-size: 1rem;
            border: none;
            color: #fff;
            background-color: #007bff;
            border-radius: 4px;
            cursor: pointer;
        }

        #countdown button:hover {
            background-color: #0056b3;
        }
    </style>
</header>
<div class="h-100 center-content">
    <i class="bi bi-check-circle-fill icon text-success"></i>
    <h1 class="mx-3">Thank You, Your order has been confirmed</h1>
    <div id="countdown">Redirecting in 10 seconds... <button onclick="skipRedirect()">Skip</button></div>
</div>
<%- include('footer') %>
<script>
    // Countdown function
    function countdownRedirect(seconds, redirectUrl) {
        const countdownElement = document.getElementById('countdown');
        countdownElement.innerHTML = `Redirecting To Home in ${seconds} seconds... <button onclick="skipRedirect()">Skip</button>`;

        const countdownInterval = setInterval(() => {
            seconds--;

            if (seconds <= 0) {
                clearInterval(countdownInterval);
                window.location.href = redirectUrl;
            } else {
                countdownElement.innerHTML = `Redirecting To Home in ${seconds} seconds... <button onclick="skipRedirect()">Skip</button>`;
            }
        }, 1000);
    }

    // Skip function
    function skipRedirect() {
        window.location.href = '/';
    }

    // Start the countdown
    countdownRedirect(10, '/');
</script>